<%= form_for(post) do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :content %>
    <%= f.text_field :content %>
  </div>

  <div class="field">
    <%= f.label :post_date %>
    <%= f.date_select :post_date %>
  </div>

   <div class="field">
    <%= f.label :city_id %>
    <%= f.text_field :city_id, :value => params[:city_id], :readonly => true %>
  </div>

   <div class="field">
    <%= f.label :user_id %>
    <%= f.text_field :user_id, :value => params[:user_id], :readonly => true %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
