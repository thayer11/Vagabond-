
<div class="post">
	<p id="notice"><%= notice %></p>

	<p>
	  <strong>Title:</strong>
	  <%= @post.title %>
	</p>

	<p>
	  <strong>Content:</strong>
	  <%= @post.content %>
	</p>

	<p>
	  <strong>Post date:</strong>
	  <%= @post.post_date %>
	</p>

	<%= link_to 'Edit', edit_post_path(@post) %> |
	<%= link_to 'Back', posts_path %> |
	<%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure you want to delete ' + @post.title + "?" } %>
</div>