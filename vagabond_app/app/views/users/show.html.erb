<div class="user_information">

  <p id="notice"><%= notice %></p>
  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>
  <p>
    <strong>First Name:</strong>
    <%= @user.fname %>
  </p>
  <p>
    <strong>Last Name:</strong>
    <%= @user.lname %>
  </p>
  <p>
    <strong>Current City:</strong>
    <%= @user.current_city %>
  </p>
  <p>
    <strong>Join date:</strong>
    <%= @user.join_date %>
  </p>
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Back', users_path %>

</div>
